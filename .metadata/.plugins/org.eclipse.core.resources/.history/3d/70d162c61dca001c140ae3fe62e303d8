package exercicio_marco;

import java.util.Scanner;

public class Quest07 {

	public static void main(String[] args) {
		Scanner read = new Scanner(System.in);
		float valor, peso;
		
		System.out.print("Informe o peso em GRAMAS da balança: ");
		peso = read.nextFloat();
		System.out.println();
		valor = (peso - 230) * 0.02f;
		System.out.printf("O valor da refeição foi de R$%.2f",valor);
	}
}
